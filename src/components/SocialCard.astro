---
interface Props {
    href: string;
    title: string;
}

const { href, title } = Astro.props;
---

<div class="auto group flex w-full">
    <a
        target="_blank"
        href={href}
        class="flex w-full items-center justify-between gap-2 text-nowrap rounded border border-neutral-200 p-1.5 font-medium text-black md:gap-0"
    >
        <p>{title}</p>
        <div
            class="transform text-neutral-700 transition-transform duration-300 group-hover:-rotate-12"
        >
            <svg
                width="12"
                height="12"
                viewBox="0 0 12 12"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    d="M2.07102 11.3494L0.963068 10.2415L9.2017 1.98864H2.83807L2.85227 0.454545H11.8438V9.46023H10.2955L10.3097 3.09659L2.07102 11.3494Z"
                    fill="currentColor"></path>
            </svg>
        </div>
    </a>
</div>
